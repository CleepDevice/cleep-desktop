{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*"]
        },
        "lib": [
            "es2016",
            "dom"
        ],
        "target": "es6",
    },
    "include": [
        "**/*"
    ],
    "exclude": [
        "node_modules/",
        "dist/"
    ]
}
