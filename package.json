{
    "name": "CleepDesktop",
    "version": "0.1.0",
    "description": "Desktop application to manage your Cleep devices",
    "main": "cleepdesktop.js",
    "scripts": {
        "start": "electron .",
        "build-linux64": "scripts/build-linux64.sh",
        "build-linux64-circleci": "scripts/build-linux64-circleci.sh",
        "build-mac32": "scripts/build-mac32.sh",
        "build-mac64": "scripts/build-mac64.sh",
        "build-win32": "scripts\\build-windows32.bat",
        "build-win64": "scripts\\build-windows64.bat",
        "publish-linux64": "scripts/build-linux64.sh publish",
        "publish-linux64-circleci": "scripts/build-linux64-circleci.sh publish",
        "publish-mac32": "scripts/build-mac32.sh publish",
        "publish-mac64": "scripts/build-mac64.sh publish",
        "publish-win32": "scripts\\build-windows32.bat publish",
        "publish-win64": "scripts\\build-windows64.bat publish",
        "ui-linux": "scripts/launch-ui-linux.sh",
        "ui-mac": "scripts/launch-ui-mac.sh",
        "ui-win": "scripts\\launch-ui-windows.bat",
        "core-linux": "scripts/launch-core-linux.sh",
        "core-mac": "scripts/launch-core-mac.sh",
        "core-win": "scripts\\launch-core-windows.bat",
        "linux-archive": "scripts/linux-archive.sh"
    },
    "repository": "https://github.com/tangb/cleep-desktop",
    "keywords": [
        "cleep",
        "rasperrypi",
        "automation",
        "iot"
    ],
    "author": "Tanguy BONNEAU <tanguy.bonneau@gmail.com>",
    "license": "MIT",
    "devDependencies": {
        "devtron": "^1.4.0",
        "electron": "8.3.0",
        "electron-builder": "^22.6.1",
        "electron-notarize": "^0.2.1"
    },
    "dependencies": {
        "@sentry/electron": "^1.3.0",
        "detect-port": "^1.3.0",
        "electron-dl": "^1.14.0",
        "electron-log": "^3.0.9",
        "electron-settings": "^3.2.0",
        "electron-updater": "^4.3.1"
    },
    "build": {
        "appId": "com.cleep.cleepdesktop",
        "productName": "CleepDesktop",
        "asar": true,
        "afterPack": "./buildAfterPackHook.js",
        "asarUnpack": [
            "cleepdesktopcore/**"
        ],
        "linux": {
            "icon": "resources/",
            "target": [
                "AppImage"
            ],
            "maintainer": "Tanguy Bonneau <tanguy.bonneau@gmail.com>",
            "category": "Network",
            "executableName": "cleepdesktop",
            "synopsis": "Cleep desktop application",
            "artifactName": "${productName}-${version}-${os}-${arch}.${ext}"
        },
        "deb": {
            "icon": "resources/256x256.png",
            "packageCategory": "misc",
            "priority": "optional",
            "depends": []
        },
        "win": {
            "icon": "resources/icon",
            "target": "nsis",
            "artifactName": "${productName}-${version}-${os}-${arch}.${ext}"
        },
        "nsis": {
            "menuCategory": "Cleep",
            "shortcutName": "CleepDesktop"
        },
        "mac": {
            "category": "public.app-category.utilities",
            "target": [
                "dmg",
                "zip"
            ],
            "icon": "resources/icon",
            "extendInfo": "config/Info.plist",
            "binaries": [],
            "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
            "hardenedRuntime": true,
            "entitlements": "config/entitlements.mac.plist",
            "entitlementsInherit": "config/entitlements.mac.plist",
            "gatekeeperAssess": false,
            "minimumSystemVersion": "10.11.0"
        },
        "dmg": {
            "icon": "resources/icon.icns",
            "sign": true
        },
        "publish": {
            "provider": "github",
            "owner": "tangb",
            "releaseType": "release"
        }
    }
}
