{
  "name": "CleepDesktop",
  "version": "0.0.0",
  "description": "Desktop app to manage your Cleep devices",
  "main": "main.js",
  "scripts": {
    "start": "electron ."
  },
  "repository": "https://bitbucket.org/Tangb/cleep-desktop",
  "keywords": [
    "cleep",
    "rasperrypi",
    "raspi",
    "desktop"
  ],
  "author": "Tanguy Bonneau",
  "license": "GPLv3",
  "devDependencies": {
    "devtron": "~1.4.0",
    "electron": "~1.6.2",
    "electron-builder": "^19.27.3"
  },
  "dependencies": {
    "electron-log": "^2.2.7",
    "electron-settings": "^3.1.1"
  },
  "build": {
    "appId": "com.cleep.cleepdesktop",
    "productName": "CleepDesktop",
    "asar": false,
    "linux": {
      "icon": "resources/",
      "target": [
        "tar.gz",
        "deb"
      ],
      "category": "Network",
      "executableName": "cleepdesktop"
    },
    "deb": {
      "icon": "resources/256x256.png",
      "maintainer": "Tanguy Bonneau <tanguy.bonneau@gmail.com>",
      "packageCategory": "misc",
      "priority": "optional",
      "depends": []
    },
    "win": {
        "target": "nsis"
    }
  }
}
