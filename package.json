{
    "name": "cleep-desktop",
    "version": "0.1.6",
    "description": "Desktop application to manage your Cleep devices",
    "main": "main.js",
    "scripts": {
        "copyfiles": "copyfiles \"html/**/*\" build/ && copyfiles \"core/**/*\" build/ && copyfiles cleepdesktopcore.py build/ && copyfiles dev-app-update.yml build/ && copyfiles package.json build/",
        "copy:elevate-exe": "copyfiles --flat \"src/sudo/elevate.exe\" \"build/sudo/\"",
        "build": "rimraf build && tsc && npm run copy:elevate-exe && npm run copyfiles",
        "watch": "tsc -w",
        "lint": "eslint -c .eslintrc --ext .ts ./src",
        "start": "npm run build && electron ./build/main.js",
        "build-linux64": "scripts/build-linux64.sh",
        "build-linux64-circleci": "scripts/build-linux64-circleci.sh",
        "build-mac32": "scripts/build-mac32.sh",
        "build-mac64": "scripts/build-mac64.sh",
        "build-win32": "scripts\\build-windows32.bat",
        "build-win64": "scripts\\build-windows64.bat",
        "publish-linux64": "scripts/build-linux64.sh publish",
        "publish-linux64-circleci": "scripts/build-linux64-circleci.sh publish",
        "publish-mac32": "scripts/build-mac32.sh publish",
        "publish-mac64": "scripts/build-mac64.sh publish",
        "publish-win32": "scripts\\build-windows32.bat publish",
        "publish-win64": "scripts\\build-windows64.bat publish",
        "ui-linux": "scripts/launch-ui-linux.sh",
        "ui-mac": "scripts/launch-ui-mac.sh",
        "ui-win": "scripts\\launch-ui-windows.bat",
        "core-linux": "scripts/launch-core-linux.sh",
        "core-mac": "scripts/launch-core-mac.sh",
        "core-win": "scripts\\launch-core-windows.bat",
        "linux-archive": "scripts/linux-archive.sh"
    },
    "repository": "https://github.com/tangb/cleep-desktop",
    "keywords": [
        "cleep",
        "rasperrypi",
        "automation",
        "iot"
    ],
    "author": "Tanguy BONNEAU <tanguy.bonneau@gmail.com>",
    "license": "MIT",
    "devDependencies": {
        "@types/detect-port": "^1.3.2",
        "@types/node": "^17.0.22",
        "@types/progress-stream": "^2.0.2",
        "@types/unzipper": "^0.10.5",
        "@types/uuid4": "^2.0.0",
        "@typescript-eslint/eslint-plugin": "^5.12.1",
        "@typescript-eslint/parser": "^5.12.1",
        "copyfiles": "^2.4.1",
        "electron": "17.1.2",
        "electron-builder": "^22.10.5",
        "electron-notarize": "^1.1.1",
        "eslint": "^8.11.0",
        "rimraf": "^3.0.2",
        "typescript": "^4.5.5"
    },
    "dependencies": {
        "@octokit/rest": "^18.12.0",
        "@sentry/electron": "^3.0.4",
        "axios": "^0.26.1",
        "detect-port": "^1.3.0",
        "electron-dl": "^3.3.0",
        "electron-is-dev": "^2.0.0",
        "electron-log": "^4.4.6",
        "electron-settings": "^4.0.2",
        "electron-updater": "^4.6.1",
        "extract-zip": "^2.0.1",
        "node-wifi": "^2.0.16",
        "progress-stream": "^2.0.0",
        "semver": "^7.3.5",
        "unzipper": "^0.10.11",
        "uuid4": "^2.0.2"
    },
    "build": {
        "appId": "com.cleep.cleepdesktop",
        "productName": "CleepDesktop",
        "asar": true,
        "afterPack": "./buildAfterPackHook.js",
        "asarUnpack": [
            "cleepdesktopcore/**"
        ],
        "linux": {
            "icon": "resources/",
            "target": [
                "AppImage"
            ],
            "maintainer": "Tanguy Bonneau <tanguy.bonneau@gmail.com>",
            "category": "Network",
            "executableName": "cleepdesktop",
            "synopsis": "Cleep desktop application",
            "artifactName": "${productName}-${version}-${os}-${arch}.${ext}"
        },
        "deb": {
            "icon": "resources/256x256.png",
            "packageCategory": "misc",
            "priority": "optional",
            "depends": []
        },
        "win": {
            "icon": "resources/icon",
            "target": "nsis",
            "artifactName": "${productName}-${version}-${os}-${arch}.${ext}"
        },
        "nsis": {
            "menuCategory": "Cleep",
            "shortcutName": "CleepDesktop"
        },
        "mac": {
            "category": "public.app-category.utilities",
            "target": [
                "dmg",
                "zip"
            ],
            "icon": "resources/icon",
            "extendInfo": "config/Info.plist",
            "binaries": [],
            "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
            "hardenedRuntime": true,
            "entitlements": "config/entitlements.mac.plist",
            "entitlementsInherit": "config/entitlements.mac.plist",
            "gatekeeperAssess": false,
            "minimumSystemVersion": "10.11.0"
        },
        "dmg": {
            "icon": "resources/icon.icns",
            "sign": true
        },
        "publish": {
            "provider": "github",
            "owner": "tangb",
            "releaseType": "release",
            "repo": "cleep-desktop"
        }
    }
}
