{
    "name": "CleepDesktop",
    "version": "0.0.1",
    "description": "Desktop application to manage your Cleep devices",
    "main": "cleepdesktop.js",
    "scripts": {
        "start": "electron .",
        "build-linux64": "scripts/build-linux64.sh",
        "build-mac32": "scripts/build-mac32.sh",
        "build-windows64": "scripts\\build-windows64.bat",
		"build-windows32": "scripts\\build-windows32.bat",
        "publish-linux64": "scripts/build-linux64.sh publish",
        "publish-mac32": "scripts/build-mac32.sh publish",
        "publish-windows64": "scripts\\build-windows64.bat publish",
		"publish-windows32": "scripts\\build-windows32.bat publish",
        "ui-linux": "scripts/launch-ui-linux.sh",
        "ui-mac": "scripts/launch-ui-mac.sh",
        "ui-windows": "scripts\\launch-ui-windows.bat",
        "core-linux": "scripts/launch-core-linux.sh",
        "core-mac": "scripts/launch-core-mac.sh",
        "core-windows": "scripts\\launch-core-windows.bat"
    },
    "repository": "https://github.com/tangb/CleepDesktop",
    "keywords": [
        "cleep",
        "rasperrypi",
        "iot"
    ],
    "author": "Tanguy BONNEAU <tanguy.bonneau@gmail.com>",
    "license": "GPLv3",
    "devDependencies": {
        "devtron": "1.4.x",
        "electron": "1.8.2",
        "electron-builder": "20.3.1"
    },
    "dependencies": {
        "detect-port": "1.2.2",
        "electron-log": "2.2.14",
        "electron-settings": "3.1.4",
        "electron-updater": "^2.18.2",
        "npm": "^5.7.1"
    },
    "build": {
        "appId": "com.cleep.cleepdesktop",
        "productName": "CleepDesktop",
        "asar": false,
        "linux": {
            "icon": "resources/",
            "target": [
                "AppImage"
            ],
            "maintainer": "Tanguy Bonneau <tanguy.bonneau@gmail.com>",
            "category": "Network",
            "executableName": "cleepdesktop",
            "synopsis": "Cleep devices manager"
        },
        "appImage": {
            "systemIntegration": "ask"
        },
        "deb": {
            "icon": "resources/256x256.png",
            "packageCategory": "misc",
            "priority": "optional",
            "depends": []
        },
        "win": {
            "icon": "resources/icon",
            "target": "nsis"
        },
        "nsis": {
            "menuCategory": "Cleep",
            "shortcutName": "CleepDesktop"
        },
        "mac": {
            "category": "public.app-category.utilities",
            "target": "dmg",
            "icon": "resources/icon",
            "extendInfo": "config/Info.plist",
            "binaries": [
                "TODO set path to generated cleepdesktopcore binary"
            ]
        },
        "dmg": {
            "icon": "resources/icon.icns"
        },
        "publish": {
            "provider": "github",
            "owner": "tangb",
            "repo": "CleepDesktop"
        }
    }
}
